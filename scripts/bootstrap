#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

echo "ğŸš€ Bootstrapping Airbeld development environment..."
echo

# Check Python version
if ! command -v python3 &> /dev/null; then
    echo "âŒ Error: python3 not found. Please install Python 3.13 or higher."
    exit 1
fi

PYTHON_VERSION=$(python3 --version 2>&1 | awk '{print $2}')
echo "âœ“ Found Python $PYTHON_VERSION"

# Create virtual environment
if [[ -d ".venv" ]]; then
    echo "âš ï¸  Virtual environment already exists at .venv/"
    read -p "   Remove and recreate? (y/N): " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        echo "ğŸ—‘ï¸  Removing old .venv/..."
        rm -rf .venv
    else
        echo "   Keeping existing .venv/"
        echo
    fi
fi

if [[ ! -d ".venv" ]]; then
    echo "ğŸ“¦ Creating virtual environment..."
    python3 -m venv .venv
    echo "âœ“ Virtual environment created at .venv/"
fi

# Activate virtual environment
echo "ğŸ”Œ Activating virtual environment..."
source .venv/bin/activate

# Upgrade pip
echo "â¬†ï¸  Upgrading pip..."
python -m pip install --upgrade pip --quiet

# Install dependencies
echo "ğŸ“¥ Installing dependencies from requirements.txt..."
pip install -r requirements.txt --quiet

echo
echo "âœ… Bootstrap complete!"
echo
echo "ğŸ“ Next steps:"
echo "   1. Activate the virtual environment:"
echo "      source .venv/bin/activate"
echo
echo "   2. Run Home Assistant with the integration:"
echo "      ./scripts/develop"
echo
echo "   3. Lint your code:"
echo "      ./scripts/lint"
echo
