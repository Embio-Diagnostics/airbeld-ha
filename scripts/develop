#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

# Activate virtual environment if it exists (for local development)
if [[ -d ".venv" ]] && [[ -z "$VIRTUAL_ENV" ]]; then
    echo "âœ“ Activating virtual environment (.venv/)"
    source .venv/bin/activate
fi

# Create config dir if not present
if [[ ! -d "${PWD}/config" ]]; then
    mkdir -p "${PWD}/config"
    hass --config "${PWD}/config" --script ensure_config
fi

# Create custom_components directory in config if it doesn't exist
mkdir -p "${PWD}/config/custom_components"

# Create symlink to integration (remove old one if exists)
if [[ -L "${PWD}/config/custom_components/airbeld" ]]; then
    rm "${PWD}/config/custom_components/airbeld"
elif [[ -d "${PWD}/config/custom_components/airbeld" ]]; then
    rm -rf "${PWD}/config/custom_components/airbeld"
fi
ln -s "${PWD}/custom_components/airbeld" "${PWD}/config/custom_components/airbeld"

echo "âœ“ Linked integration: config/custom_components/airbeld -> custom_components/airbeld"
echo "ðŸš€ Starting Home Assistant..."
echo

# Start Home Assistant
hass --config "${PWD}/config" --debug
